@model MvcOnlineTicariOtamasyon.Models.siniflar.Cariler


@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))

{
<form class="form-horizontal">

  
    @Html.HiddenFor(x=>x.CariID)
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">AD</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">SOYAD</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">MAIL</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">SEHIR</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">SIFRE</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox"> Bilgileri Okudum <a href="#">Sartlari kabul ediyorum</a>

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Submit</button>

        </div>

    </div>

</form>

}