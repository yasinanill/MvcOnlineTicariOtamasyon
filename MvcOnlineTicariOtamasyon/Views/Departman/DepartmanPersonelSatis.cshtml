@using MvcOnlineTicariOtamasyon.Models.siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>DepartmanPersonelSatis</h2>
<ol class="breadcrumb mb-4">
<li class="breadcrumb-item active"> <strong>Departman Adi: @ViewBag.d </strong></li>
</ol>
<br />

<table class="table tab-content">

    <tr>
        <th>Satis Id</th>
        <th>Urun</th>
        <th>cari </th>
        <th>fiyat</th>
        <th>adet</th>
        <th>toplam</th>
        <th>tarih</th>
        <th>islem</th>
        

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.SatisID</th>
            <th>@x.Urun.UrunAd</th>
            <th>@x.Cariler.CariAd</th>
            <th>@x.Fiyat</th>
            <th>@x.Adet</th>
            <th>@x.ToplamTutar</th>
            <th>@x.Tarih</th>
            <td> <a href="/Departman/DepartmanPersonelSatis" class="btn btn-light">Yazdir</a></td>
        </tr>



    }


</table>